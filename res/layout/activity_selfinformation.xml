   <sun.geoffery.uploadpic.CircleImg
       android:id="@+id/avatarImg"
       android:layout_width="100dp"
       android:layout_height="100dp"
       android:layout_below="@+id/textView9"
       android:layout_centerHorizontal="true"
       android:contentDescription="@string/app_name"
       android:src="@drawable/ic_launcher" />

   <TextView
       android:id="@+id/sex2"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_below="@+id/name2"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@+id/textView3"
       android:background="#ffffff"
       android:ems="10"
       android:gravity="center_vertical"
       android:hint="性别"
       android:textSize="23dp" />

   <TextView
       android:id="@+id/birthday2"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/sex2"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@+id/textView3"
       android:background="#ffffff"
       android:ems="10"
       android:gravity="center_vertical"
       android:hint="生日:例如1999.1.1"
       android:textSize="23dp" />

   <TextView
       android:id="@+id/textView3"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_alignBaseline="@+id/birthday2"
       android:layout_alignBottom="@+id/birthday2"
       android:layout_alignParentLeft="true"
       android:background="#ffffff"
       android:gravity="center"
       android:text="生日："
       android:textSize="23dp" />

   <TextView
       android:id="@+id/email2"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/birthday2"
       android:layout_marginTop="10dp"
       android:layout_toRightOf="@+id/textView4"
       android:background="#ffffff"
       android:ems="10"
       android:gravity="center_vertical"
       android:hint="email：aaa@aaa.com"
       android:textSize="23dp" />

   <TextView
       android:id="@+id/textView4"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_alignBaseline="@+id/email2"
       android:layout_alignBottom="@+id/email2"
       android:layout_alignParentLeft="true"
       android:background="#ffffff"
       android:gravity="center"
       android:text="Email："
       android:textSize="23dp" />

   <TextView
       android:id="@+id/textView5"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBottom="@+id/avatarImg"
       android:layout_alignParentLeft="true"
       android:layout_alignRight="@+id/textView2"
       android:layout_alignTop="@+id/avatarImg"
       android:gravity="left|center_vertical"
       android:text="头像："
       android:textSize="20dp" />

   <TextView
       android:id="@+id/name2"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_alignLeft="@+id/sex2"
       android:layout_alignParentRight="true"
       android:layout_below="@+id/avatarImg"
       android:layout_marginTop="16dp"
       android:background="#ffffff"
       android:ems="10"
       android:gravity="fill_vertical"
       android:hint="姓名"
       android:textSize="23dp" />

   <TextView
       android:id="@+id/textView6"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignBaseline="@+id/textView5"
       android:layout_alignBottom="@+id/textView5"
       android:layout_alignParentRight="true"
       android:text="&lt;-点击更改" />

   <TextView
       android:id="@+id/textView7"
       android:layout_width="wrap_content"
       android:layout_height="38dp"
       android:layout_alignParentLeft="true"
       android:layout_below="@+id/textView4"
       android:layout_marginTop="10dp"
       android:background="#ffffff"
       android:gravity="center"
       android:text="VIP等级："
       android:textSize="23dp" />

   <Button
       android:id="@+id/tovip"
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:layout_alignParentRight="true"
       android:layout_alignTop="@+id/textView7"
       android:layout_toRightOf="@+id/textView7"
       android:background="@drawable/shape2"
       android:text="点击查询" />

   <TextView
       android:id="@+id/textView2"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_above="@+id/sex2"
       android:layout_alignParentLeft="true"
       android:background="#ffffff"
       android:gravity="center"
       android:text="姓名："
       android:textSize="23dp" />

   <TextView
       android:id="@+id/textView1"
       android:layout_width="wrap_content"
       android:layout_height="45dp"
       android:layout_above="@+id/birthday2"
       android:layout_toLeftOf="@+id/sex2"
       android:background="#ffffff"
       android:gravity="center"
       android:text="性别："
       android:textSize="23dp" />

</RelativeLayout>